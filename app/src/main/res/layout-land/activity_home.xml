<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#F5F5F5"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:id="@+id/topArea"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:background="@drawable/gradient"
        android:elevation="8dp">

        <TextView
            android:id="@+id/myDashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:text="Bienvenue"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/dashboard_adminName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/myDashboard"
            android:layout_marginStart="@dimen/margin_medium"
            android:text="Mr/Mme "
            android:textColor="#E0F7FA"
            android:textSize="@dimen/text_size_medium"
            android:fontFamily="sans-serif" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar"
            app:shapeAppearanceOverlay="@style/CircleImageView" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:overScrollMode="never">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_medium"
            app:columnCount="2">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="@dimen/margin_small"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:layout_columnWeight="1"
                app:rippleColor="#1F000000"
                android:clickable="true"
                android:focusable="true"
                app:strokeWidth="1dp"
                app:strokeColor="#20000000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_medium">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:src="@drawable/facture_logo"
                        android:alpha="0.9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:text="Facture"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="@dimen/margin_small"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:layout_columnWeight="1"
                app:rippleColor="#1F000000"
                android:clickable="true"
                android:focusable="true"
                app:strokeWidth="1dp"
                app:strokeColor="#20000000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_medium">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:src="@drawable/logo_cloche"
                        android:alpha="0.9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:text="Annonce"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/history"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="@dimen/margin_small"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:layout_columnWeight="1"
                app:rippleColor="#1F000000"
                android:clickable="true"
                android:focusable="true"
                app:strokeWidth="1dp"
                app:strokeColor="#20000000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_medium">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:src="@drawable/logo_historique"
                        android:alpha="0.9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:text="Historique"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card4"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="@dimen/margin_small"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:layout_columnWeight="1"
                app:rippleColor="#1F000000"
                android:clickable="true"
                android:focusable="true"
                app:strokeWidth="1dp"
                app:strokeColor="#20000000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_medium">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:src="@drawable/logo_reclamation"
                        android:alpha="0.9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:text="Reclamations"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card5"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="@dimen/margin_small"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:layout_columnWeight="1"
                app:rippleColor="#1F000000"
                android:clickable="true"
                android:focusable="true"
                app:strokeWidth="1dp"
                app:strokeColor="#20000000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_medium">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:src="@drawable/maps_logo"
                        android:alpha="0.9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:text="A proximitÃ©"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card6"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="@dimen/margin_small"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:layout_columnWeight="1"
                app:rippleColor="#1F000000"
                android:clickable="true"
                android:focusable="true"
                app:strokeWidth="1dp"
                app:strokeColor="#20000000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_medium">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:src="@drawable/logo_calendrier"
                        android:alpha="0.9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:text="Planning"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDocuments"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="@dimen/margin_small"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:layout_columnWeight="1"
                app:rippleColor="#1F000000"
                android:clickable="true"
                android:focusable="true"
                app:strokeWidth="1dp"
                app:strokeColor="#20000000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_medium">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:src="@drawable/logo_document"
                        android:alpha="0.9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:text="Documents"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.gridlayout.widget.GridLayout>
    </ScrollView>
</LinearLayout> 